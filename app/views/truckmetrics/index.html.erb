<h1>Listing truckmetrics</h1>


<p>
  <b>Download:</b>
  <%= link_to "CSV", truckmetrics_path(format: "csv") %>
</p>

  <b>Upload:</b>
<%= form_tag import_truckmetrics_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<br>

<%= form_tag("/truckmetrics", method: "get") do %>
  <%= label_tag(:datetimestamp, "Specify Time:") %>
  <%= date_field_tag(:datetimestamp) %>
  <%= submit_tag("Search") %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Equipment</th>
      <th>Status Category</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @truckmetrics.each do |truckmetric| %>
      <tr>
        <td><%= truckmetric.date %></td>
        <td><%= truckmetric.equipment %></td>
        <td><%= truckmetric.status_category %></td>
        <td><%= truckmetric.duration %></td>
        <td><%= link_to 'Show', truckmetric %></td>
        <td><%= link_to 'Edit', edit_truckmetric_path(truckmetric) %></td>
        <td><%= link_to 'Destroy', truckmetric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Truckmetric', new_truckmetric_path %>
