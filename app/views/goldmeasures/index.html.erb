<h1>Listing goldmeasures</h1>

<p>
  <b>Download:</b>
  <%= link_to "CSV", goldmeasures_path(format: "csv") %>
</p>

  <b>Upload:</b>
<%= form_tag import_goldmeasures_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<br>

<%= form_tag("/goldmeasures", method: "get") do %>
  <%= label_tag(:datetimestamp, "Specify Time:") %>
  <%= text_field_tag(:datetimestamp) %>
  <%= submit_tag("Search") %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Total shtd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goldmeasures.each do |goldmeasure| %>
      <tr>
        <td><%= goldmeasure.time %></td>
        <td><%= goldmeasure.total_shtd %></td>
        <td><%= link_to 'Show', goldmeasure %></td>
        <td><%= link_to 'Edit', edit_goldmeasure_path(goldmeasure) %></td>
        <td><%= link_to 'Destroy', goldmeasure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goldmeasure', new_goldmeasure_path %>
